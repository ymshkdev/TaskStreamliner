      <strong><%= link_to todo.title, task_path(todo), style: "text-decoration: none; color: #333;" %></strong>
      <div style="font-size: 0.7rem; color: #888;">
        ã€† <%= todo.deadline&.strftime("%m/%d %H:%M") %>
      </div>
    </li>
  <% end %>
<% end %>