<div class="simple-calendar">
  <div class="calendar-heading" style="text-align: center; margin-bottom: 10px;">
    <%= link_to "前月", calendar.url_for_previous_view, class: "btn" %>
    <span class="calendar-title" style="font-size: 1.5em; font-weight: bold; margin: 0 20px;">
      <%= start_date.year %>年 <%= t('date.month_names')[start_date.month] %>
    </span>
    <%= link_to "次月", calendar.url_for_next_view, class: "btn" %>
  </div>

  <table class="table" style="width: 100%; border-collapse: collapse;">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th style="border: 1px solid #ddd; padding: 10px;"><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <td style="border: 1px solid #ddd; height: 100px; vertical-align: top; width: 14%;">
              <%# ここであなたの index.html.erb で書いた中身を呼び出します %>
              <% passed_block.call day, sorted_events.fetch(day, []) %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>